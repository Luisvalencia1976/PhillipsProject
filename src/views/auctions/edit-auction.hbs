<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agregar Producto en Subasta</title>
    <link
      rel="stylesheet"
      href="https://necolas.github.io/normalize.css/8.0.1/normalize.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/static/css/styles.css" />

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/static/assets/user.svg" />
    <!-- Bootstrap icons-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />

  </head>
  <body>

    <!-- Header-->
    <main>
      <style>
        .formulario { margin: 10px; padding: 20px; border-radius: 20px;
        background:rgba(0, 0, 0, 0.72); width: 100%; height: 100%; color: white;
        text-decoration: border; position: relative; top: 0 ; left: 0; }
      </style>

      <form action="auctions/edit{{product._id}}" method="PUT"  class="formulario" id="formulario">

        <!-- Grupo: Tipo de Documento de Identidad -->
        <div class="formulario__grupo" id="grupo__usuario">
          <h2><strong>Agregar un producto a la subasta:</strong></h2>
          <br />
          <label for="usuario" class="formulario__label"><strong>ID Articulo</strong></label>
          <div class="formulario__grupo-input">
            <input
              type="number"
              class="formulario__input"
              name="usuario"
              id="usuario"
              placeholder="#"
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>

        </div>

        <!-- Grupo: Nombre Completo -->
        <div class="formulario__grupo" id="grupo__nombre">
          <label for="nombre" class="formulario__label">Foto</label>
          <div class="formulario__grupo-input">
            <input
              type="text"
              class="formulario__input"
              name="nombre"
              id="nombre"
              placeholder="URL  del archivo"
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>
          
        </div>
        <div class="formulario__grupo" id="grupo__nombre">
          <label for="nombre" class="formulario__label">Nombre </label>
          <div class="formulario__grupo-input">
            <input
              type="text"
              class="formulario__input"
              name="name"
              id="nombre"
              placeholder="Nombre del Articulo"
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>
          
        </div>
        <div class="formulario__grupo" id="grupo__nombre">
          <label for="nombre" class="formulario__label">Descripcion</label>
          <div class="formulario__grupo-input">
            <input
              type="text"
              class="formulario__input"
              name="description"
              id="nombre"
              placeholder=""
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>
          
        </div>

        <!-- Grupo: Teléfono -->
        <div class="formulario__grupo" id="grupo__telefono">
          <label for="telefono" class="formulario__label">Fecha Limite de
            Cancelacion
          </label>
          <div class="formulario__grupo-input">
            <input
              type="datetime-local"
              class="formulario__input"
              name="limite"
              id="limite"
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>

        </div>
        <div class="formulario__grupo" id="grupo__telefono">
          <label for="telefono" class="formulario__label">Fecha Inicio de
            Subasta
          </label>
          <div class="formulario__grupo-input">
            <input
              type="datetime-local"
              class="formulario__input"
              name="limite"
              id="limite"
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>

        </div>
        <div class="formulario__grupo" id="grupo__telefono">
          <label for="telefono" class="formulario__label">Fecha Terminacion
            Subasta
          </label>
          <div class="formulario__grupo-input">
            <input
              type="datetime-local"
              class="formulario__input"
              name="limite"
              id="limite"
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>

        </div>
        <!-- Grupo: Fecha de Nacimiento -->
        <div class="formulario__grupo" id="grupo__telefono">
          <label for="telefono" class="formulario__label">Monto Inicial</label>
          <div class="formulario__grupo-input">
            <input
              type="text"
              class="formulario__input"
              name="telefono"
              id="telefono"
              placeholder="$"
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>

        </div>

        <div class="formulario__grupo formulario__grupo-btn-enviar">
          <button type="submit" class="formulario__btn">Registrar</button>

          <br />
        </div>
      </form>
    </main>

    <br /><br /><br /><br /><br /><br /><br />

    <!-- Footer-->
    <footer class="py-5 bg-dark">
      <div class="container"><p class="m-0 text-center text-white">Copyright
